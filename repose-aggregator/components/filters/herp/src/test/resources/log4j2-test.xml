<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="org.openrepose.commons.utils.xslt">
    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%-4r [%t] %-5p %c  - %m%n"/>
        </Console>
        <List name="highly-efficient-record-processor-pre-ListAppender"/>
        <List name="highly-efficient-record-processor-post-ListAppender"/>
        <LogErrorListener name="ErrorListener"/>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="ErrorListener"/>
        </Root>
        <Logger name="com.sun.jersey" level="off"/>
        <Logger name="net.sf.ehcache" level="error"/>
        <Logger name="org.apache.commons.httpclient" level="warn"/>
        <Logger name="org.eclipse.jetty" level="off"/>
        <Logger name="org.openrepose" level="debug"/>
        <Logger name="org.springframework" level="warn"/>
        <Logger name="intrafilter-logging" level="info"/>
        <Logger name="highly-efficient-record-processor-pre-Logger" level="trace">
            <AppenderRef ref="highly-efficient-record-processor-pre-ListAppender"/>
        </Logger>
        <Logger name="highly-efficient-record-processor-post-Logger" level="trace">
            <AppenderRef ref="highly-efficient-record-processor-post-ListAppender"/>
        </Logger>
    </Loggers>
</Configuration>
